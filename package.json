{
  "name": "@akella.app/react-ui",
  "version": "0.1.1",
  "description": "Akella UI components based on shadcn/ui",
  "license": "MIT",
  "homepage": "https://akella.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/org-akella-app/react-ui.git"
  },
  "bugs": {
    "url": "https://github.com/org-akella-app/react-ui/issues"
  },
  "keywords": [
    "akella",
    "ui",
    "shadcn",
    "tailwind",
    "radix"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rimraf dist && tsup && node scripts/copy-styles.mjs",
    "dev": "tsup --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepack": "npm run build"
  },
  "peerDependencies": {
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0",
    "tailwindcss": ">=4.0.0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "tailwindcss": "^4",
    "rimraf": "^5.0.10",
    "tsup": "^8.5.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
